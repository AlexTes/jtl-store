{
  "name": "jtl-jobs",
  "version": "1.0.0",
  "description": "jobs service for junior tech list",
  "scripts": {
    "lint": "eslint src/ test/ tools/",
    "start": "babel-node tools/run start",
    "test": "ava"
  },
  "main": "src/index.js",
  "repository": {
    "url": "git@gitlab.com:AlexTes/jtl-jobs.git",
    "type": "git"
  },
  "author": {
    "name": "Alexander Tesfamichael",
    "email": "alex.tesfamichael@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "ava": {
    "babel": "inherit",
    "files": [
      "test/*.js",
      "test/**/*.js",
      "!test/mock/*.js",
      "!test/setup.js"
    ],
    "require": [
      "babel-register",
      "./test/setup.js"
    ],
    "source": [
      "src/*.js",
      "src/**/*.js"
    ]
  },
  "babel": {
    "plugins": [
      "transform-flow-strip-types"
    ],
    "presets": [
      "latest"
    ]
  },
  "esformatter": {
    "root": true,
    "plugins": [
      "esformatter-add-trailing-commas",
      "esformatter-align",
      "esformatter-flow",
      "esformatter-limit-linebreaks"
    ],
    "align": {
      "AssignmentExpression": 0,
      "VariableDeclarations": 0
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "plugins": [
      "ava",
      "promise",
      "flowtype"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "key-spacing": [
        "error",
        {
          "align": "value"
        }
      ]
    }
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "envalid": "^2.4.0",
    "knex": "^0.12.6",
    "koa": "^2",
    "koa-bodyparser": "^2",
    "koa-compress": "^2",
    "koa-logger": "^2",
    "koa-router": "^7",
    "lodash": "^4.16.4",
    "pg": "^6.1.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "esformatter": "^0.10.0",
    "esformatter-add-trailing-commas": "^1.1.0",
    "esformatter-align": "^0.2.3",
    "esformatter-flow": "^1.0.1",
    "esformatter-limit-linebreaks": "0.0.3",
    "eslint": "^3.8.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-promise": "^3.3.0",
    "flow-bin": "^0.36.0",
    "nodemon": "^1.11.0"
  }
}
